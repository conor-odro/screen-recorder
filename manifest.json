{
  "name": "Tab Capture Playground",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Playground for screen recording",
  //"permissions": ["activeTab", "tabCapture"],
  "permissions": ["<all_urls>","activeTab", "tabCapture", "tabs", "downloads", "storage", "identity", "https://www.googleapis.com/*"],
  "background": {
    "scripts": ["screenity-background.js"]
  },
  "browser_action": {
    "default_title": "Screen recorder"
  },
  "web_accessible_resources": [
    "src/*"
  ]
}
